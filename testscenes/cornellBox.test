#Cornell Box
size 500 500
camera 0 0 1.99 0 0 0 0 1 0 60
output cornellBox.bmp

maxdepth 10
samplesperpixel 1000
sampling random
direct on
indirect on
tracingtype path

#cube
vertex -1 -1 +1
vertex +1 -1 +1
vertex +1 +1 +1
vertex -1 +1 +1

vertex -1 -1 -1
vertex +1 -1 -1
vertex +1 +1 -1
vertex -1 +1 -1

ambient 0 0 0
specular 0 0 0
shininess 1
emission 0 0 0
diffuse 0 0 0

attenuation 1 0 0

area rect -.75 1.99 -2.25 0 0 -1.25 1.5 0 0 6 6 6 3
#point 0 1.8 0 1.0 1.0 1.0

#white walls
material lambertian
pushTransform
diffuse 0.7 0.7 0.7
scale 2 2 4
#back
tri 2 1 0
tri 3 2 0
#bottom
tri 1 5 0
tri 5 4 0
#front
tri 5 6 4
tri 6 7 4
#top
tri 6 3 7
tri 2 3 6
popTransform

#red walls
material lambertian
pushTransform
diffuse 1 0 0
scale 2 2 4
tri 4 3 0
tri 4 7 3
popTransform

#blue wall
material lambertian
pushTransform
diffuse 0.3 0.3 1.0
scale 2 2 4
tri 1 2 5
tri 5 2 6
popTransform

#sphere
diffuse 0.7 0.7 0.7
specular 0.1 0.1 0.1
material lambertian
pushTransform
sphere 1.0 -1.4 -2.5 0.8
popTransform

#sphere
diffuse 0.7 0.7 0.7
specular 0.1 0.1 0.1
material lambertian
pushTransform
sphere -1.1 -1.4 -3 0.6
popTransform
